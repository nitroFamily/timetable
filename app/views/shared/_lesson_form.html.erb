<%= form_for(@lesson) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  		<%= f.label :name, "Название предмета"%>
      <%= f.text_field :name %>

      <!-- <%= f.label :form, "Тип"%> -->
      <!-- <%= f.text_field :form %> -->

      <%= f.label :form, "Тип"%>
      <%= f.select(:form, options_for_select([['Лекция', 1], 
                                                 ['Практика', 2], 
                                                 ['Лабораторная', 3]], 1)) %>

      <%= f.label :number, "Пара"%>
      <%= f.select(:number, options_for_select([['1-Пара: 9:00 - 10:35', 1], 
                                                   ['2-Пара: 10:45 - 12:20', 2],
                                                   ['3-Пара: 13:00 - 14:35', 3], 
                                                   ['4-Пара: 14:45 - 16:20', 4], 
                                                   ['5-Пара: 16:30 - 18:05', 5]], 1)) %>
 
      <%= f.label :classroom, "Аудитория"%>
      <%= f.text_field :classroom %>

      <%= f.label :day, "День"%>
      <%= f.select(:day, options_for_select([['Понедельник', 1], 
                                                ['Вторник', 2],
                                                ['Среда', 3], 
                                                ['Четверг', 4], 
                                                ['Пятница', 5],
                                                ['Суббота', 6]], 1)) %>

      <%= f.label :start_week, "Начальная неделя"%>
      <%= f.number_field :start_week, min: 1, max: 18%>

      <%= f.label :end_week, "Конечная неделя"%>
      <%= f.number_field :end_week, min: 1, max: 18%>

  <%= f.submit "Создать", class: "btn btn-large btn-primary" %>
<% end %>